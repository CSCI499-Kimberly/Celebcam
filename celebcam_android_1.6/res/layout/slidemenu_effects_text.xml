<?xml version="1.0" encoding="UTF-8"?>
<!-- EFFECTS: text SUBMENU  -->
	<LinearLayout
		android:id="@+id/effects_sub_text"
		xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="300dp" 
	    android:layout_height="fill_parent"
	    android:orientation = "vertical"
	    android:gravity="left"
	    android:background="@drawable/slidemenu_submenu_bg"
	    
	>
	    <EditText
	        android:id="@+id/text_from_user"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        />
	    
	    <Button 
	        android:id="@+id/effect_add_text"
	        android:text="Add Text"
	        style="@style/slidemenu_btn"	        
	        />
	    <Button 
	        android:id="@+id/effect_remove_text"
	        android:text="Remove Text"
	        style="@style/slidemenu_btn"	        
	        />
	    
	</LinearLayout>