<?xml version="1.0" encoding="utf-8"?>

<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/data_acquisition_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
 
<!--CRITICAL SECTION : DO NO ALTER, These Views are required for the camera and effects -->
<!--CRITICAL SECTION : DO NO ALTER, These Views are required for the camera and effects -->
<!--CRITICAL SECTION : DO NO ALTER, These Views are required for the camera and effects -->

  	<SurfaceView
    	android:id="@+id/camera_surface"
    	android:layout_gravity="center"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
     />
 	
   	<com.celebcam.GreenScreen
    	android:id="@+id/green_screen"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
     />
   	 	
    <com.celebcam.CelebCamOverlaidView
    	android:id="@+id/celeb_surface"
    	android:layout_gravity="center"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    />
    
    
    <com.celebcam.CelebCamTextView
    	android:id="@+id/text_surface"
    	android:layout_gravity="center"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:visibility="gone"
    />
  
    <com.celebcam.CelebCamSparklesView
        android:id ="@+id/sparkles_view"
    	android:layout_gravity="center"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:visibility="invisible"
    />
    
    <com.celebcam.CelebCamBorderView
        android:id ="@+id/border_view"
    	android:layout_gravity="center"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:visibility="gone"
    />
    
    <com.celebcam.CelebCamController
    android:id="@+id/zoom_snap_button"
    android:background = "#00000000"
    android:layout_width="158dp"
    android:layout_height="158dp"
    android:layout_gravity="right|bottom"
    />
    
    <com.celebcam.CelebCamLibraryView
    	android:id="@+id/library_surface"
    	android:layout_gravity="center"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    /> 
    
<!--  END OF CRITICAL SECTION, END OF CRITICAL SECTION, END OF CRITICAL SECTION -->
<!--  END OF CRITICAL SECTION, END OF CRITICAL SECTION, END OF CRITICAL SECTION -->
<!--  END OF CRITICAL SECTION, END OF CRITICAL SECTION, END OF CRITICAL SECTION -->
   	
   	<com.celebcam.CelebCamEditView 
   	    android:id="@+id/editing_view"   	
    	android:layout_gravity="center"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	
     />
   	    
   	<LinearLayout
   	    android:id="@+id/sliders"
   	    android:layout_height ="fill_parent"
   	    android:layout_width  = "300dp"
   	    android:visibility="gone"
   	    >
   	    
  <com.celebcam.CelebCamSlider
      android:id="@+id/red_controller"
      android:layout_width ="100dp"
      android:layout_height="fill_parent"
      />
  
    <com.celebcam.CelebCamSlider
      android:id="@+id/green_controller"
      android:layout_width="100dp"
      android:layout_height="fill_parent"
      />
    
      <com.celebcam.CelebCamSlider
      android:id="@+id/blue_controller"
      android:layout_width="100dp"
      android:layout_height="fill_parent"
      />
  </LinearLayout>
  
  <SlidingDrawer
     android:id="@+id/drawer"
     android:layout_width="200dp"
     android:layout_height="fill_parent"
     android:orientation="horizontal"
     android:layout_gravity="right"

     android:handle="@+id/handle"
     android:content="@+id/effects_palette_scroll">

     <ImageView
         android:id="@id/handle"
         android:background="@drawable/menu"
         android:layout_width="33dip"
         android:layout_height="102dip" />

	<ScrollView
		android:id="@+id/effects_palette_scroll"
	    android:layout_width="200dp" 
	    android:layout_height="fill_parent"
	    android:orientation = "vertical"
	    android:gravity="center"
	>
		<LinearLayout
		android:id="@+id/effects_palette"
	    android:layout_width="200dp" 
	    android:layout_height="fill_parent"
	    android:orientation = "vertical"
	    android:gravity="center"
	>
	
	    <EditText
	        android:id="@+id/text_to_add"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        />
	    
	    <Button 
	        android:id="@+id/effect_add_text"
	        android:text="Add Text"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />


	    
	    <Button 
	        android:id="@+id/effect_add_sparkles"
	        android:text="Add Sparkles"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />

	    <Button 
	        android:id="@+id/sparkles_brush"
	        android:text="Sparkles Brush"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    
	    <Button 
	        android:id="@+id/effect_bw"
	        android:text="Black and White"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    	 	    
	    <Button 
	        android:id="@+id/effect_sepia"
	        android:text="Sepia"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />

	   <Button 
	        android:id="@+id/effect_color"
	        android:text="Color"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />	  
	          
	    <Button 
	        android:id="@+id/edit_button"
	        android:text="Edit"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />

	     <Button 
	        android:id="@+id/save_button"
	        android:text="Save"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	     
	     <Button 
	        android:id="@+id/gallery_button"
	        android:text="Gallery"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    	    
	    <Button 
	        android:id="@+id/email_button"
	        android:text="Email"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    
	 <EditText
	        android:id="@+id/twitter_text_field"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        />
	    	    
		    
	  <Button
		android:id="@+id/twitter_post_button"
		android:text="Post Tweet"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:onClick="postTweet"
		/>	

				
	    <Button 
	        android:id="@+id/debug_button"
	        android:text="Debug"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    	    
	</LinearLayout>
	</ScrollView>

